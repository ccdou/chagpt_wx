/* welcome.wxss */
.welcome-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(to bottom, #e6f7ff, #99ccff);
}

.welcome-text {
  font-family: cursive; /* 使用花体字体 */
  font-size: 36px;
  color: #333;
  margin-bottom: 20px;
}

/* welcome.wxss */
.start-button {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 8px 16px; /* 调整按钮大小 */
  margin-top: 200px; /* 向下移动按钮 */
  cursor: pointer;
}
 
 
 
 
 
 
 


